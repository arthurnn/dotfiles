[color]
        diff = auto
        status = auto
        branch = auto
[user]
        name = Arthur Neves
	email = arthurnn@gmail.com
[alias]
        co = checkout
        ci = commit
[core]
        excludesfile = ~/.gitignore
        whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	editor = emacs
[color "branch"]
       current = yellow reverse
       local = yellow
       remote = green
[color "diff"]
       meta = yellow bold
       frag = magenta bold
       old = red bold
       new = green bold
[color "status"]
       added = yellow
       changed = green
       untracked = cyan
[github]
        user = arthurnn
[pull]
        rebase = true
[push]
	default = simple
[commit]
	gpgsign = true