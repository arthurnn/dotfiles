[color]
	diff = auto
	status = auto
	branch = auto
[user]
	name = Arthur Neves
	email = arthurnn@gmail.com
	signingkey = 1E433E17
[alias]
	co = checkout
	ci = commit
[core]
	excludesfile = ~/.gitignore
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	editor = emacsclient -t -a=\"\"
	attributesfile = ~/.gitattributes
[diff "json"]
	textconv = python -m json.tool
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[github]
	user = arthurnn
[pull]
	rebase = true
[push]
	default = simple
[gc]
	auto = 0
[commit]
	gpgsign = true
